<h1>All Yours Tasks</h1>
<ul>
<% @tasks.each do |task| %>
  <li> <% if task.completed? %>
  <input type="checkbox" checked disabled>
  <% else %>
  	  <input type="checkbox">
  <% end %>
  <%= link_to task.title, task_path(task) %> <%= link_to "🗑️",
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
<% end %>

<%= link_to "New Task", new_task_path %>
